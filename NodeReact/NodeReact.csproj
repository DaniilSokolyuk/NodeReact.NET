<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.1;netcoreapp2.2</TargetFrameworks>

        <Description>Aalternative to ReactJS.NET with rendering in separated node.js process</Description>
        <PackageTags>react, reactjs, nodejs</PackageTags>
        <Authors>Daniil Sokolyuk</Authors>

        <VersionPrefix>1.0.0</VersionPrefix>

        <PackageProjectUrl>https://github.com/DaniilSokolyuk/NodeReact.NET</PackageProjectUrl>
        <RepositoryUrl>https://github.com/DaniilSokolyuk/NodeReact.NET</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>

        <PublishRepositoryUrl>true</PublishRepositoryUrl>
    </PropertyGroup>

    <ItemGroup>
        <None Remove="Resources\interop.generated.js" />
        <None Remove="Resources\interop.generated.min.js" />
    </ItemGroup>

    <ItemGroup>
        <EmbeddedResource Include="Resources\interop.generated.js" LogicalName="interopBundle" />
        <EmbeddedResource Include="Resources\interop.generated.min.js" LogicalName="interopBundleMin" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Mvc.ViewFeatures" Version="2.2.0" />
        <PackageReference Include="Jering.Javascript.NodeJS" Version="4.4.0" />
    </ItemGroup>

</Project>
